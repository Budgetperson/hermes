<header>
  <h2>New Message</h2>
</header>

<form>
  <article>
    <input type="text" name="to" placeholder="To..." required autofocus spellcheck="false" value="<%= @value %>">
    <textarea name="body" placeholder="Message..." required></textarea>
  </article>  
  <footer>
    <button>Send</button>
  </footer>
</form>