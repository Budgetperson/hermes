@import 'mixins'

#app > nav.nav
  display: block
  width: 60px
  border-box()
  padding: 10px
  box-shadow: inset -1px 0 2px rgba(0, 0, 0, 0.3)
  border-right: 1px solid rgba(0, 0, 0, 0.2)
  background: rgba(255, 255, 255, 0.2)
  text-align: center
  
  .avatar 
    cursor: pointer
  
    img
      width: 38px
      height: 38px
      border-radius(5px)
      box-shadow(0px, 1px, 2px, rgba(0, 0, 0, 0.3))
    
  .item 
    margin: 12px 0
    cursor: pointer
    
    img      
      width: 25px
      height: 25px